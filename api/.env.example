# RouteX API Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/routex
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
MONAD_TESTNET_RPC_URL=https://testnet-rpc.monad.xyz/
MONAD_MAINNET_RPC_URL=https://mainnet-rpc.monad.xyz/
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key

# Contract Addresses (Monad Testnet)
TRADER_AGENT_ADDRESS=0x7267749E1Fa24Cae44e1B76Ec90F3B2f98D2C290
ROUTER_DEFENSE_ADDRESS=0x458Ec2Bc6E645ccd8f98599D6E4d942ea480ca16
CROSSCHAIN_ROUTER_ADDRESS=0x22A8C0BD01f88D3461c98E9bc3399A83dDBB9Cee
AI_STRATEGY_OPTIMIZER_ADDRESS=0xc6aF426FC11BFb6d46ffaB9A57c30ab5437AA09C
QUANTGUARD_PRO_ADDRESS=0xb10a0b0f6282024D5c3b5256CB312D06177cF4ab

# External Contract Addresses
UNISWAP_ROUTER_ADDRESS=0x4c4eABd5Fb1D1A7234A48692551eAECFF8194CA7
WETH_ADDRESS=0xB5a30b0FDc5EA94A52fDc42e3E9760Cb8449Fb37
USDC_ADDRESS=0xf817257fed379853cDe0fa4F97AB987181B1E5Ea
DAI_ADDRESS=0xA3dbBD3887228aE84f08bE839f9e20485759a004

# AI Configuration
CLAUDE_API_KEY=your_claude_api_key_here
AI_CACHE_TTL=300
AI_MAX_REQUESTS_PER_MINUTE=20
AI_MODEL=claude-3-haiku-20240307

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY_SALT=your-api-key-salt-change-this
CORS_ORIGIN=http://localhost:3000,https://routex.io
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Monitoring & Analytics
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ELASTICSEARCH_URL=http://localhost:9200
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# WebSocket Configuration
WS_PORT=3001
WS_CORS_ORIGIN=*

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@routex.io

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_CROSS_CHAIN=true
ENABLE_MEV_PROTECTION=true
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true

# Development Configuration
DEBUG=routex:*
HOT_RELOAD=true
MOCK_BLOCKCHAIN=false

# Production Configuration (only use in production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# ENABLE_HTTPS=true