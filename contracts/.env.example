# RouteX 合约环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 部署者私钥（请勿提交到 git）
PRIVATE_KEY=your_private_key_here

# Monad 网络 RPC 端点
MONAD_RPC_URL=https://monad-rpc-endpoint

# Monad Etherscan API Key（用于合约验证）
MONAD_ETHERSCAN_API_KEY=your_etherscan_api_key_here

# 可选：其他网络配置
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key

# Gas 配置
GAS_PRICE=20000000000  # 20 gwei
GAS_LIMIT=6000000

# 合约配置
SWAP_ROUTER_ADDRESS=0xE592427A0AEce92De3Edee1F18E0157C05861564
WETH_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2
USDC_ADDRESS=0xA0b86a33E6417c82BdDB8E35c5b14Bbc6c3e6d7C
DAI_ADDRESS=0x6B175474E89094C44Da98b954EedeAC495271d0F